/* pages/home/home.wxss */

.container-box {
  width: 100%;
  box-sizing: border-box;
  background: #eee;
}

image {
  width: 80rpx;
  height: 80rpx;
}

.image {
  display: flex;
  flex-direction: row;
}

.cn, .image{
  display: flex;
  flex-direction: row;
}

.navigate, .device, .led, .warn, .rundata, .userinfo {
  height: 100rpx;
  line-height: 80rpx;
  /* margin-bottom: 5%; */
  padding: 10rpx;
  border-bottom: 1rpx solid #eaeaea;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 10rpx;
}

.sens{
  width: 100%;
  padding: 10rpx;
  border-bottom: 1rpx solid #eaeaea;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 10rpx;
}
.sens text{
  line-height: 80rpx
}
.battery{
   background: #fff;
   border-bottom: 1rpx solid #eaeaea;
    box-sizing: border-box;
    margin-bottom: 10rpx;
    padding: 10rpx;
}
.signBox {
  background: #fff;
  margin-bottom: 10rpx;
  padding-bottom: 20rpx;
}

.nickname {
  margin-left: 35%;
}

text {
  font-size: 36rpx;
  color: #000;
  font-family: PingFangSC-Regular;
}

.switch {
  line-height: 34rpx;
  font-size: 30rpx;
  padding-left: 30rpx;
}

.wx-switch-input {
  width: 82rpx !important;
  height: 40rpx !important;
}

/*白色样式（false的样式）*/

.wx-switch-input::before {
  width: 80rpx !important;
  height: 36rpx !important;
}

/*绿色样式（true的样式）*/

.wx-switch-input::after {
  width: 40rpx !important;
  height: 36rpx !important;
}

.cn-warn {
  margin-right: 70%;
}

.navigate {
  display: flex;
}

.navigate {
  justify-content: space-between;
  box-sizing: border-box;
}

.warn {
  border-bottom: 20px solid;
