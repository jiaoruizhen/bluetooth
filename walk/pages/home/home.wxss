.wrap {
  position: relative;
  width: 100%;
  height: 250px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.run, .cal {
  width: 50%;
  text-align: center;
}

.run image, .cal image {
  display: block;
  margin: 0 auto;
}

.rundata {
  height: 80px;
  border: 0;
}

.title{
  text-align: center;
  background: #fff;
}

.histogram {
  margin-bottom: 5rpx;
  background: #fff;
}


.count{
  padding-right: 5%;
  color: darkgray;
}

.infor_box {
  background: #fff;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}

.total, .avg {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  background: #3ea6ff;
  color: #fff;
  line-height: 80rpx;
  /* text-align: center; */
  padding-left: 20rpx;
}
.avg{
  margin-top: 20rpx;
}
.total text, .avg text{
  font-size: 40rpx;
  color: #fff;
}
.list view, .list view{
  line-height: 80rpx;
  font-size: 40rpx;
}
.list text, .list text{
  line-height: 80rpx;
}

button {
  height: 64rpx;
  box-sizing: border-box;
  text-align: center;
  min-width: 100rpx;
  font-size: 32rpx;
  line-height: 64rpx;
  margin-right: 10rpx;
  margin-top: 8rpx;
}


.total-list {
  display: flex;
  flex-flow: row;
}

.total-list .list {
  /* justify-content: space-between */
  flex-grow: 1;
  text-align: center;
}
.foot{
  margin-top: 20rpx;
