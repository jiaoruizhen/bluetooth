/* pages/petOwnerInfo/petOwnerInfo.wxss */
@import "../../../font.wxss";
.petOwnerinfoBox{
  width: 100%;
  box-sizing: border-box;
  padding:5rpx;
}
.user{
  display: flex;
  flex-direction: row;
  width: 100%;
  box-sizing: border-box;
  padding:20rpx;
  padding-right: 0
 
}
.icon{
  width: 100rpx;
  height: 100rpx;
  border: 0 solid #ff0000;
  border-radius: 100rpx;
  background-color: #f10b2e;
  margin-left: 20%;
}
.icontext{
  padding-right:10%;
  line-height: 100rpx;
}
.text,.petText{
  font-size: 18px;
  color: #000000;
  font-family: PingFangSC-Regular;
  margin-right: 10%;
}
input{
  text-align: center;
}
.title{
  margin-top: 10%;
  margin-bottom: 5%;
  border-bottom: 1rpx solid gainsboro;
  display: flex;
  flex-direction: row;
   padding: 20rpx;
   width: 100%;
   box-sizing: border-box;
}
button{
height: 32px;
box-sizing: border-box;
text-align: center;
min-width: 70px;
font-size: 16px;
line-height: 32px;
margin-right: 5%;
}
page{
  width: 100%;
  font-size: 0.8rem;
  background: #f8f8f8;
}
.fa{
  font-size: 1rem;
}

.menu-demo{
  width: 100%;
  height: 120rpx;
  background: #fff;
  display: flex;
  color: #333;
}
.menu-item{
  width: 20%;
  height: 100%;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}

.nav{
  width:100%;
  box-sizing: border-box;
  height: 80rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #eee;
}
.pet{
  margin-bottom: 10%;
}
.nav .fa{
  color: #8baa1e;
}
.nav-title{
  /* padding-left: 10rpx; */
  flex-grow: 1;
}
.nav-text,.fa.fa-next{
  color: #999;
}

