.growth{
  display: flex;
  flex-direction: row;
  width: 95%;
  margin: 0 auto;
  margin-top: 6%;
  height: 64rpx;
  line-height: 64rpx;
}
page{
   font-size: 36rpx;
   color: #000000;
   font-family: PingFangSC-Regular;
}
button{
  width: 95%;
  margin: 0 auto;
  height: 64rpx;
  box-sizing: border-box;
  text-align: center;
  min-width: 140rpx;
  font-size: 32rpx;
  line-height: 64rpx;
  margin-top: 5%;
}
picker{
  padding-top: 5%;
}
input{
  height: 64rpx;
  line-height: 100%;
  box-sizing: border-box;
  padding: 0 10rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
}